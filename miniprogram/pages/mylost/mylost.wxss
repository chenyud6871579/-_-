@import "../util/weui.wxss";

.margin_tool {
  margin-top: 30rpx;
}

.tab-h {
  width: 100vw;
  display: flex;
  flex-direction: row;
  background-color: white;
  height: 5vh;
  line-height: 5vh;
  font-size: 3vh;
  font-weight: bolder;
  justify-content: space-around;
  position: fixed;
  top: 0;
  z-index: 1;
}

swiper {
  height: 100vh;
}

.my-tab {
  display: flex;
  color: white;
  padding: 20rpx 0;
  margin: 0 20rpx;
}

.my-tab-item {
  text-align: center;
  background-color: white;
  color:var(--weui-FG-1);
  font-size: 30rpx;
}

.my-tab-item:active {
  text-align: center;
  background-color: rgb(225, 225, 225);
  color:var(--weui-FG-1);
  font-size: 30rpx;
}

.weui-search-bar {
  background-color: #f7f7f7;
  padding-bottom: 0;
}

.tab-item {
  width: 250rpx;
  text-align: center;
  margin: 36rpx;
  color: rgb(156, 156, 156);
  font-size: 30rpx;
}

.tab-item.active {
  width: 250rpx;
  color: rgb(65, 65, 65);
  /* border-bottom: 5rpx blue solid; */
}

.box {
  padding: 3vw;
  background-color: white;
  width: 84vw;
  margin: auto;
  margin-bottom: 30rpx;
}

.top {
  display: flex;
  flex-direction: row;
  height: 60rpx;
  justify-content: space-between;
}

.touxiang {
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  margin: 0 15rpx 0 0;
}

.call {
  width: 50rpx;
  height: 50rpx;
  margin-left: 10rpx;
}

.title {
  font-size: 35rpx;
  color: #363636;
  line-height: 50rpx;
  font-weight: bold;
}

.tag {
  font-size: 27rpx;
  color: white;
  padding: 6rpx 10rpx;
  margin-left: 75rpx;
  border-radius: 10%;
  background-color: #7e126e;
  letter-spacing: 3rpx;
}

.kind {
  font-size: 27rpx;
  color: white;
  padding: 6rpx 10rpx;
  margin-left: 20rpx;
  border-radius: 10%;
  background-color: #7e126e;
  letter-spacing: 3rpx;
}

.line {
  margin-top: 10rpx;
}

.info {
  margin-left: 75rpx;
  color: #363636;
  font-size: 33rpx;
  width: 80%;
  line-height: 50rpx;
  text-align: justify;
}

.box_bottom {
  margin: 10rpx 0 0 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.delete {
  color: red;
  font-weight: bold;
}

.time {
  text-align: right;
  margin-right: 10rpx;
  color: #707070;
  font-size: 24rpx;
}

.img_box {
  white-space: nowrap;
  margin-top: 20rpx;
  margin-left: 75rpx;
}

.img {
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
}

.send {
  width: 300rpx;
  height: 100rpx;
  position: fixed;
  margin: auto;
  bottom: 80rpx;
  right: 0;
  left: 0;
}

.send:active {
  width: 262.5rpx;
  height: 87.5rpx;
  position: fixed;
  margin: auto;
  bottom: 86.25rpx;
  right: 0;
  left: 0;
}

.show_send {
  position: absolute;
  top: 0;
  z-index: 2;
}

.bg {
  position: absolute;
  height: 100vh;
  width: 100vw;
  background: rgba(0, 0, 0, 0.5);
  top: 0;
}

.show_button {
  height: 200rpx;
  position: fixed;
  margin: auto;
  display: flex;
  flex-direction: row;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  line-height: 200rpx;
  justify-content: space-around;
}

.show_button button {
  width: 350rpx;
  height: 150rpx;
  text-align: center;
  line-height: 150rpx;
}
